#Modèle d'une sitemap fait avec Liquid.  Le sitemap qui sera utilisé est dans le dossier _site et est généré è partir du plugin jekyll-sitemap
<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>http://kboisvert.github.io/test_IGO/{{ page.url | remove: 'index.html' }}</loc>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
</urlset>
